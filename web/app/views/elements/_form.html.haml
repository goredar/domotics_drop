= form_for @element, :html => { :class => "form-horizontal" } do |f|
  = render(partial: 'shared/form_error', object: @element)
  .field.control-group
    .control-label
      = f.label :name
    .controls
      = f.text_field :name
  .field.control-group
    .control-label
      = f.label :element_type_id
    .controls
      = f.select :element_type_id, ElementType.all.collect { |type| [type.name, type.id] }
  .field.control-group
    .control-label
      = f.label :room_id
    .controls
      = f.select :room_id, Room.all.collect { |room| [room.name, room.id] }
  .field.control-group
    .control-label
      = f.label :device_id
    .controls
      = f.select :device_id, Device.all.collect { |device| [device.name, device.id] }
  .field.control-group
    .control-label
      = f.label :options
    .controls
      = f.text_field :options
  .field.control-group
    .control-label
      = f.label :description
    .controls
      = f.text_field :description
  .actions.control-group
    .controls
      = f.submit :class => "btn btn-primary"
