= form_for @room, :html => { :class => "form-horizontal" } do |f|
  = render(partial: 'shared/form_error', object: @room)
  .field.control-group
    .control-label
      = f.label :name
    .controls
      = f.text_field :name
  .field.control-group
    .control-label
      = f.label :room_type_id
    .controls
      = f.select :room_type_id, RoomType.all.collect { |rt| [rt.name, rt.id] }
  .field.control-group
    .control-label
      = f.label :options
    .controls
      = f.text_field :options
  .field.control-group
    .control-label
      = f.label :description
    .controls
      = f.text_field :description
  .actions.control-group
    .controls
      = f.submit :class => "btn btn-primary"