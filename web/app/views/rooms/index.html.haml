- @actions = [{label: t('action_bar.new_room'), path: new_room_path}]
.span9
  %h4 #{t('.title')}
  = render 'shared/notice'
  %table{:class => "table table-bordered table-hover"}
    %thead
      %tr
        %th #{t('helpers.label.room.name')}
        %th #{t('helpers.label.room.room_type')}
        %th #{t('helpers.label.room.options')}
        %th #{t('helpers.label.room.description')}
    %tbody
    - @rooms.each do |room|
      %tr
        %td= link_to "#{room.name}", edit_room_path(room)
        %td= room.room_type.name
        %td= room.options
        %td= room.description