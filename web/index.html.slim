doctype html
html
  head
    title Test Page
    meta charset="utf-8"
    meta content="height = device-height, width = device-width,\
      initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport"
    link href="css/style.css" rel="stylesheet"
    link href="css/typicons.css" rel="stylesheet"
  body
    .screen#play
      .column
        .blue.square data-command="light/on"
          span.typcn-eye-outline
          span.label on
        .grey.square data-command="light/off"
          span.typcn-eye
          span.label off
        .red.square
        .green.square
      .column-2x
        .square-1x#corner_1_light data-command="switch"
          .element
            span.typcn-th-large
        .square-1x#corner_2_light data-command="switch"
          .element
            span.typcn-th-large
        .square-1x#corner_3_light data-command="switch"
          .element
            span.typcn-th-large
        .square-1x#corner_4_light data-command="switch"
          .element
            span.typcn-th-large
        .purple.rectangle-land
        .green.square-1x
        .green.square-1x
      .column-2x
        .purple.square-2x
        .grey.rectangle-port
        .grey.square-1x
        .grey.square-1x
      .column
        .blue.square
        .blue.square
        .purple.square data-command="state"
          span.typcn-arrow-sync
        .red.square
          span.typcn-delete-outline
    
    script src="js/zepto.js"
    script src="js/script.js"
